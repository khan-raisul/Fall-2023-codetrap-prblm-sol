#include <stdio.h>
#include <math.h>
int main() {
   long long int N;
   
   long long int T_N=1;
   
   scanf("%lld",&N);
   
   if(N==0){
       printf("%lld",T_N);
   }
   else if(0<N<=30){
   
   for(int i=1;i<=N;i++){
       
       T_N+=pow(3,i);
       
   }
           printf("%lld",T_N);
       
   }
   
       

    return 0;
}
